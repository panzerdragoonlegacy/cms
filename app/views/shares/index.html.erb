<% title 'Shares Feed (Beta!)' %>

<% if policy(Share).new? %>
  <p><%= link_to 'New Share', new_admin_share_path(Share) %></p>
<% end %>

<% if @shares %>
  <div id="resources">
    <% @shares.each do |share| %>
      <div class="resource">
        <div class="details">
          <h2>
            <%= link_to(
              share.contributor_profile.name,
              contributor_profile_path(share.contributor_profile)
            )%> shared a link
            <%= local_time_ago share.created_at %>
          </h2>
          <% if policy(share).edit? %>
            <p><%= link_to 'Edit Share', edit_admin_share_path(share) %></p>
          <% end %>
          <% if share.comment.present? %>
            <p style="margin-bottom: 15px;"><%= share.comment %></p>
          <% end %>
          <div>
            <%= raw show_embedded_share(share.url) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @shares %>
<% end %>
