<% if @downloads %>
  <div id="resources">
    <% @downloads.each do |download| %>
      <div class="resource">
        <div class="thumbnail">
          <%= link_to(
            show_picture(download, 'download_picture', :thumbnail), download
          ) %>
        </div>
        <div class="details">
          <h2><%= link_to download.name, download %></h2>
          <p>Published <%= local_time_ago download.published_at %></p>
          <p><%= download.description %></p>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @downloads %>
<% end %>
