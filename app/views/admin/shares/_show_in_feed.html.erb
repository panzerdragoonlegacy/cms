<div class="form-group form-check">
  <%= f.check_box :show_in_feed, class: 'form-check-input' %>
  <%= f.label :show_in_feed, 'Show in Feed?', class: 'form-check-label' %>
  <%= render(
    partial: 'admin/shared/form/warning',
    locals: {
      warning: 'Unchecking this box will prevent the share from appearing ' \
        'in the Shares Feed. This is useful for adding older shares that ' \
        'have already been posted on social media.'
    }
  ) %>
</div>
