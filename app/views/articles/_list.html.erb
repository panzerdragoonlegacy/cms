<div id="resources">
  <% @articles.each do |article| %>
    <div class="resource">
      <div class="details">
        <h2><%= link_to article.name, article %></h2>
        <% unless article.publish == true %>
          <p class="unpublished">Unpublished</p>
        <% end %>
        <p><%= article.description %></p>
      </div>
    </div>
  <% end %>
</div>
