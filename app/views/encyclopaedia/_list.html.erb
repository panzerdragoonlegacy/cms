<div id="resources">
  <% pages.each do |page| %>
    <div class="resource">
      <div class="thumbnail">
        <% if page.page_picture.present? %>
          <%= link_to(
            show_picture(page, 'page_picture', :thumbnail), encyclopaedia_path(page)
          ) %>
        <% end %>
      </div>
      <div class="details">
        <h2><%= link_to page.name, encyclopaedia_path(page) %></h2>
        <% unless page.publish %>
          <p class="unpublished">Unpublished</p>
        <% end %>
        <p><%= truncated_text page.content %></p>
      </div>
    </div>
  <% end %>
</div>
