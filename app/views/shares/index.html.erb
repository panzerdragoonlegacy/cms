<% if @contributor_profile %>
  <% title "#{@contributor_profile.name}'s Shares" %>
<% else %>
  <% title 'Shares' %>
<% end %>

<% unless params[:contributor_profile_id] %>
  <% if @category_groups.present? %>
    <h2>Share Categories</h2>
    <%=
      render(
        partial: 'site_map/category_groups',
        locals: { category_groups: @category_groups }
      )
    %>
  <% end %>
  <% if @shares.present? %>
    <h2>All Shares</h2>
  <% end %>
<% end %>

<% if @shares %>
  <%= render 'list' %>
  <%= paginate @shares %>
<% end %>
