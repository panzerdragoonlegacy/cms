<% title "Site Map" %>

<p>
  <% if params[:browse_by] == 'saga' || !params[:browse_by] %>
    Browse By Saga
  <% else %>
    <%= link_to 'Browse By Saga', site_map_path(browse_by: 'saga') %>
  <% end %> |
  <% if params[:browse_by] == 'media_type' %>
    Browse By Media Type
  <% else %>
    <%= link_to(
      'Browse By Media Type', site_map_path(browse_by: 'media_type')
    ) %>
  <% end %>
</p>

<% if params[:browse_by] == 'media_type' %>
  <%= render partial: 'browse_by_media_type', locals: { tags: @tags } %>
<% elsif params[:browse_by] == 'tag' %>
  <%= render partial: 'browse_by_tag', locals: { tags: @tags } %>
<% else %>
  <%= render partial: 'browse_by_saga', locals: { tags: @tags } %>
<% end %>
