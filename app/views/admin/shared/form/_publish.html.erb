<div class="form-group form-check">
  <%= f.check_box :publish, class: 'form-check-input' %>
  <%= f.label :publish, 'Publish?', class: 'form-check-label' %>
  <% if defined? warning %>
    <%=
      render(
        partial: 'admin/shared/form/warning',
        locals: { warning: warning }
      )
    %>
  <% end %>
 <% if defined? danger %>
    <%=
      render(
        partial: 'admin/shared/form/danger',
        locals: { danger: danger }
      )
    %>
  <% end %>
</div>
