<% title 'Special Pages' %>

<%=
  render(
    partial: 'admin/shared/table/new_button',
    locals: {
      resource: SpecialPage,
      resource_name: 'Special Page',
      path: new_admin_special_page_path
    }
  )
%>

<%=
  render(
    partial: 'admin/shared/search/name_and_draft_form',
    locals: { q: @q, path: admin_special_pages_path }
  )
%>

<% if @special_pages %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%= sort_link @q, :name %></th>
        <th scope="col"><%= sort_link @q, :created_at, 'Created' %></th>
        <th scope="col"><%= sort_link @q, :updated_at, 'Modified' %></th>
        <th scope="col">
          <%= sort_link @q, :published_at, 'First Published' %>
        </th>
        <th scope="col"><%= sort_link @q, :publish, 'Published' %></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @special_pages.each do |special_page| %>
        <tr>
          <%=
            render(
              partial: 'admin/shared/table/name',
              locals: {
                resource: special_page, path: special_page_path(special_page)
              }
            )
          %>
          <%=
            render(
              partial: 'admin/shared/table/created_at',
              locals: { resource: special_page }
            )
          %>
          <%=
            render(
              partial: 'admin/shared/table/updated_at',
              locals: { resource: special_page }
            )
          %>
          <%=
            render(
              partial: 'admin/shared/table/published_at',
              locals: { resource: special_page }
            )
          %>
          <%=
            render(
              partial: 'admin/shared/table/published',
              locals: { resource: special_page }
            )
          %>
          <%=
            render(
              partial: 'admin/shared/table/edit_button',
              locals: {
                resource: special_page,
                path: edit_admin_special_page_path(special_page)
              }
            )
          %>
          <%=
            render(
              partial: 'admin/shared/table/delete_button',
              locals: { resource: special_page, resource_name: 'special page' }
            )
          %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= paginate @special_pages, views_prefix: 'admin' %>
