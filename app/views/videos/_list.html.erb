<% if @videos %>
  <div id="resources">
    <% @videos.each do |video| %>
      <div class="resource">
        <div class="thumbnail">
          <%= link_to(
            show_picture(video, 'video_picture', :thumbnail), video
          ) %>
        </div>
        <div class="details">
          <h2><%= link_to video.name, video %></h2>
          <% unless video.publish %>
            <p class="unpublished">Unpublished</p>
          <% end %>
          <p><%= video.description %></p>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @videos %>
<% end %>
