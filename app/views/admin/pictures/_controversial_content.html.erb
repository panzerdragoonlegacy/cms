<div class="form-group form-check">
  <%= f.check_box :controversial_content, class: 'form-check-input' %>
  <%= f.label(
    :controversial_content, 'Controversial Content?', class: 'form-check-label'
  ) %>
  <%=
    render(
      partial: 'admin/shared/form/info',
      locals: {
        info: "Check this to replace the picture's thumbnail in index views " \
          'and open graph previews with a "Controversial Content" message.'
      }
    )
  %>
</div>
