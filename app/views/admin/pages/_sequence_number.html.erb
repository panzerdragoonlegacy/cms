<div class="form-group">
  <%= f.label :sequence_number, 'Sequence Number' %>
  <%=
    f.number_field(
      :sequence_number,
      { min: 1, max: 99, class: 'form-control' }
    )
  %>
  <%=
    render(
      partial: 'admin/shared/form/info',
      locals: {
        info: 'Used to determine the order of chapters within a parent page. ' \
          'E.g. the order of chapters within a story.'
      }
    )
  %>
</div>
