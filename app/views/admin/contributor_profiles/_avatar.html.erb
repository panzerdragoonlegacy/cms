<div class="form-group">
  <%= f.label :avatar, 'Avatar' %>
  <% if contributor_profile.avatar? %>
    <% if is_jpeg contributor_profile.avatar.url %>
      <p><%= show_picture contributor_profile, 'avatar', :thumbnail %></p>
    <% end %>
    <p>File has already been uploaded. Replace file?</p>
  <% end %>
  <%= f.file_field :avatar, class: 'form-control' %>
  <%= render 'admin/shared/form/image_type_warning' %>
</div>
