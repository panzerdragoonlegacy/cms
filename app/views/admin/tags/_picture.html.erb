<div class="form-group">
  <%= f.label :tag_picture, 'Tag Picture' %>
  <% if tag.tag_picture? %>
    <% if is_jpeg tag.tag_picture.url %>
      <p><%= show_picture tag, 'tag_picture', :thumbnail %></p>
    <% end %>
    <p>File has already been uploaded. Replace file?</p>
  <% end %>
  <%= f.file_field :tag_picture, class: 'form-control' %>
  <%= render 'admin/shared/form/image_type_warning' %>
</div>
