<div id="resources">
  <% @pictures.each do |picture| %>
    <div class="resource">
      <div class="thumbnail">
        <% if picture.controversial_content? %>
          <%= link_to show_controversial_content_thumbnail, picture %>
        <% else %>
          <%= link_to show_picture(picture, 'picture', :thumbnail), picture %>
        <% end %>
      </div>
      <div class="details">
        <% if picture.album && @group_pictures_into_albums %>
          <h2><%= link_to picture.album.name, picture %></h2>
        <% else %>
          <h2><%= link_to picture.name, picture %></h2>
        <% end %>
        <% unless picture.publish %>
          <p class="unpublished">Unpublished</p>
        <% end %>
        <% if picture.album && @group_pictures_into_albums %>
          <p><%= picture.album.pictures.count %> pictures</p>
          <p><%= picture.album.description %></p>
        <% else %>
          <p><%= picture.description %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
